---
const pathname = Astro.url.pathname;
const isHome = pathname === "/";

const links = [
    {
        name: "View Work",
        href: "/",
        match: "hash",
        // No icon on left for View Work in the image, just chevron on right (added in markup)
    },
    {
        name: "Projects",
        href: "/projects",
        match: "path",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/></svg>`,
    },
    {
        name: "Profile",
        href: "/profile",
        match: "path",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>`,
    },
    {
        name: "Writing",
        href: "/writing",
        match: "path",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"/></svg>`,
    },
    {
        name: "GitHub",
        href: "https://github.com/agustindiazcano",
        match: "external",
        target: "_blank",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>`,
    },
];
---

<nav class="flex flex-wrap justify-center gap-2 w-full animate-nav-in">
    {
        links.map((link) => {
            const isActive =
                link.match === "path"
                    ? pathname.startsWith(link.href)
                    : pathname === "/" || pathname === "/#projects"; // Home matches View Work

            return (
                <a
                    href={link.href}
                    target={link.target || "_self"}
                    class:list={[
                        "px-4 py-2 rounded-full text-sm font-medium transition-all duration-300 relative group flex items-center gap-2 border border-transparent",
                        isActive
                            ? "bg-white text-black shadow-lg shadow-white/5" // Active: White BG, Black Text
                            : "bg-[#111] text-[#999] border-[#222] hover:text-white hover:border-[#444] hover:bg-[#1a1a1a]", // Inactive: Dark BG
                    ]}
                >
                    {/* Icons */}
                    {link.name === "View Work" && (
                        <span class="text-xs">
                            {/* Placeholder for chevron if needed, or just text? User image has chevron on right usually, but let's put it compatible */}
                            {/* Actually user image shows text then chevron. Let's stick to left icon for consistency or match image? Image: "View Work v". Others: "Icon Text". */}
                        </span>
                    )}

                    {link.icon && <Fragment set:html={link.icon} />}

                    <span>{link.name}</span>

                    {link.name === "View Work" && (
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="14"
                            height="14"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <path d="m6 9 6 6 6-6" />
                        </svg>
                    )}
                </a>
            );
        })
    }
</nav>

<style>
    .animate-nav-in {
        animation: navSlideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        opacity: 0;
        transform: translateY(10px);
    }

    @keyframes navSlideUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
