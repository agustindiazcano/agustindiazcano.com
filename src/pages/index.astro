---
import Layout from "../layouts/Layout.astro";
import ProjectGrid from "../components/ProjectGrid.jsx";
import Footer from "../components/Footer.astro";
---

<Layout title="Agustin Diaz Cano | Quantitative Systems Engineer">
    <main
        class="min-h-screen flex flex-col items-center justify-start max-w-[1200px] mx-auto px-6 py-20"
    >
        {/* Hero Section */}
        <section
            class="w-full flex flex-col items-center text-center mb-32 fade-in"
        >
            <h1
                class="text-4xl md:text-5xl font-bold tracking-tight text-transparent bg-clip-text bg-gradient-to-b from-white to-[#666] mb-6"
            >
                Agustin Diaz Cano
            </h1>
            <p class="text-lg md:text-xl text-[#888] mb-10 max-w-2xl">
                Quantitative Systems Engineer building low-latency trading
                engines and high-performance distributed systems.
            </p>
            <div class="flex flex-wrap justify-center gap-4 mt-8">
                <a
                    href="#projects"
                    class="group flex items-center gap-2 bg-white text-black px-6 py-3 rounded-full font-medium hover:bg-zinc-200 transition-all hover:scale-105 active:scale-95 text-sm"
                >
                    <span>View Work</span>
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="group-hover:translate-y-0.5 transition-transform"
                        ><path d="m6 9 6 6 6-6"></path></svg
                    >
                </a>

                <a
                    href="/projects"
                    class="flex items-center gap-2 bg-[#111] text-zinc-200 border border-white/10 px-6 py-3 rounded-full font-medium hover:bg-[#222] hover:border-white/20 transition-colors text-sm"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="text-zinc-400"
                        ><path
                            d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"
                        ></path></svg
                    >
                    <span>Projects</span>
                </a>

                <a
                    href="/profile"
                    class="flex items-center gap-2 bg-[#111] text-zinc-200 border border-white/10 px-6 py-3 rounded-full font-medium hover:bg-[#222] hover:border-white/20 transition-colors text-sm"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="text-zinc-400"
                        ><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"
                        ></path><circle cx="12" cy="7" r="4"></circle></svg
                    >
                    <span>Profile</span>
                </a>

                <a
                    href="/writing"
                    class="flex items-center gap-2 bg-[#111] text-zinc-200 border border-white/10 px-6 py-3 rounded-full font-medium hover:bg-[#222] hover:border-white/20 transition-colors text-sm"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="text-zinc-400"
                        ><path d="M12 20h9"></path><path
                            d="M16.5 3.5a2.12 2.12 0 0 1 3 3L7 19l-4 1 1-4Z"
                        ></path></svg
                    >
                    <span>Writing</span>
                </a>

                <a
                    href="https://github.com/agustindiazcano"
                    target="_blank"
                    class="flex items-center gap-2 bg-[#111] text-zinc-200 border border-white/10 px-6 py-3 rounded-full font-medium hover:bg-[#222] hover:border-white/20 transition-colors text-sm"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="text-zinc-400"
                        ><path
                            d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
                        ></path><path d="M9 18c-4.51 2-5-2-7-2"></path></svg
                    >
                    <span>GitHub</span>
                </a>
            </div>
        </section>

        {/* Bento Grid */}
        {/* Bento Grid (Interactive) */}
        <ProjectGrid client:load />

        <Footer />
    </main>

    <style>
        .fade-in {
            animation: fadeIn 1s ease-out forwards;
            opacity: 0;
        }
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</Layout>
