const { project } = Astro.props;
---

<Layout title={`${project.title} | Agustin Diaz Cano`}>
    <main class="min-h-screen max-w-[1000px] mx-auto px-6 py-20">
        <header class="mb-12">
            <a
                href="/projects"
                class="text-[#666] hover:text-white transition-colors text-sm mb-8 block"
                >‚Üê Back to Projects</a
            >

            <div
                class="h-64 w-full bg-[#111] rounded-2xl border border-[#222] mb-8 relative overflow-hidden flex items-center justify-center"
            >
                <div
                    class="absolute inset-0 bg-[url('/grid-pattern.svg')] opacity-10"
                >
                </div>
                <span
                    class="text-[#333] font-bold text-4xl uppercase tracking-widest"
                    >Image Placeholder</span
                >
            </div>

            <h1
                class="text-4xl md:text-5xl font-bold tracking-tight text-white mb-4"
            >
                {project.title}
            </h1>

            <div class="flex flex-wrap gap-2 mb-8">
                {
                    project.tags.map((tag) => (
                        <span class="text-xs text-[#888] border border-[#333] px-2 py-1 rounded bg-[#0a0a0a]">
                            {tag}
                        </span>
                    ))
                }
            </div>

            <p
                class="text-xl text-[#888] leading-relaxed max-w-3xl border-l-2 border-blue-500 pl-6"
            >
                {project.description}
            </p>
        </header>

        <article class="prose prose-invert prose-lg max-w-none text-[#999]">
            <h2 class="text-white">Project Overview</h2>
